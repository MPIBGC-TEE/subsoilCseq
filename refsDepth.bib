	date-modified = {2023-08-31 14:22:23 +0200},
	doi = {https://doi.org/10.1016/j.jclepro.2023.136686},
	issn = {0959-6526},
	journal = {Journal of Cleaner Production},
	keywords = {Tillage practice, Soil organic carbon sequestration, Subsoiling, Deep ploughing, Meta-analysis},
	pages = {136686},
	title = {Deep tillage enhanced soil organic carbon sequestration in China: A meta-analysis},
	url = {https://www.sciencedirect.com/science/article/pii/S0959652623008442},
