	journal = {Agriculture, Ecosystems \& Environment},
	keywords = {Tall fescue, Fine sandy loam, Soil organic C and total N storage, Light fraction C, Particulate organic matter C},
	number = {1},
	pages = {125-132},
	title = {Carbon and nitrogen storage by deep-rooted tall fescue (Lolium arundinaceum) in the surface and subsurface soil of a fine sandy loam in eastern Canada},
