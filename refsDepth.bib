	journal = {European Journal of Soil Science},
	number = {6},
	pages = {958-969},
	title = {Relative importance of sorption versus aggregation for organic matter storage in subsoil horizons of two contrasting soils},
	url = {https://bsssjournals.onlinelibrary.wiley.com/doi/abs/10.1111/j.1365-2389.2010.01307.x},
