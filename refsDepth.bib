	eprint = {https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2010JG001304},
	journal = {Journal of Geophysical Research: Biogeosciences},
	keywords = {soil mixing, carbon cycle, bioturbation, tillage},
	number = {G1},
	title = {Rates of soil mixing and associated carbon fluxes in a forest versus tilled agricultural field: Implications for modeling the soil carbon cycle},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2010JG001304},
	volume = {116},
	year = {2011},
