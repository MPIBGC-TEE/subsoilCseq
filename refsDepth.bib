	journal = {Global Change Biology},
	keywords = {belowground carbon allocation, carbon cycle, crops, grasses, isotopic approaches, rhizosphere microorganisms, root exudation, soil CO2 efflux, trees},
	number = {1},
	pages = {1-12},
	title = {Carbon input by roots into the soil: Quantification of rhizodeposition from root to ecosystem scale},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/gcb.13850},
