	doi = {https://doi.org/10.1016/j.ecolmodel.2014.08.016},
	issn = {0304-3800},
	journal = {Ecological Modelling},
	keywords = {Soil carbon storage, Modelling, C-TOOL, Agriculture, Management, Mineral soils},
	pages = {11-25},
	title = {C-TOOL: A simple model for simulating whole-profile carbon storage in temperate agricultural soils},
