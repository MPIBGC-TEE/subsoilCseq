	issn = {0016-7061},
	journal = {Geoderma},
	keywords = {Animal manure, Crop residues, Dissolved organic matter, Fertilization, Liming, Tillage, Water-extractable organic matter},
	note = {Ecological aspects of dissolved organic matter in soils},
	number = {3},
