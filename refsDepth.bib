	issn = {0016-7037},
	journal = {Geochimica et Cosmochimica Acta},
	number = {14},
	pages = {3460-3478},
	title = {A generalized stochastic approach to particle dispersal in soils and sediments},
	url = {https://www.sciencedirect.com/science/article/pii/S001670370800210X},
	volume = {72},
	year = {2008},
	bdsk-url-1 = {https://www.sciencedirect.com/science/article/pii/S001670370800210X},
