	date-modified = {2023-05-16 13:04:58 +0200},
	doi = {10.3389/fagro.2021.660593},
	issn = {2673-3218},
	journal = {Frontiers in Agronomy},
	title = {An Acceptance Analysis of Subsoil Amelioration Amongst Agricultural Actors in Two Regions in Germany},
	url = {https://www.frontiersin.org/articles/10.3389/fagro.2021.660593},
	volume = {3},
