	issn = {0016-7037},
	journal = {Geochimica et Cosmochimica Acta},
	number = {14},
	pages = {3601-3617},
	title = {Modeling reactive transport in sediments subject to bioturbation and compaction},
	url = {https://www.sciencedirect.com/science/article/pii/S0016703705000499},
