	journal = {Soil Biology and Biochemistry},
	keywords = {Soil organic matter, Subsoil, Heterogenity, Radiocarbon age},
	number = {2},
	pages = {256-261},
	title = {Stabilised carbon in subsoil horizons is located in spatially distinct parts of the soil profile},
