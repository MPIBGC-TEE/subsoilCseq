	journal = {Global Change Biology},
	keywords = {decomposition, depth dependency, soil nutrient cycling, soil organic matter, temperature sensitivity, whole-soil},
	number = {3},
	pages = {909-920},
	title = {A field incubation approach to evaluate the depth dependence of soil biogeochemical responses to climate change},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/gcb.16505},
	volume = {29},
