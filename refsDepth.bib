	keywords = {Soil organic matter, Carbon, Particulate organic matter, Mineral-associated organic matter, Dissolved organic matter, Soil carbon input, Soil functions},
	pages = {1-66},
	publisher = {Academic Press},
	title = {Soil organic matter formation, persistence, and functioning: A synthesis of current understanding to inform its conservation and regeneration},
