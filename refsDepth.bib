	eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1002/jpln.200700043},
	journal = {Journal of Plant Nutrition and Soil Science},
	keywords = {biodegradation, chemical composition, (co-)precipitation, dissolved organic matter, DOM, forest soils, sorption},
	number = {1},
	pages = {52-60},
	title = {Contribution of dissolved organic matter to carbon storage in forest mineral soils},
	url = {https://onlinelibrary.wiley.com/doi/abs/10.1002/jpln.200700043},
